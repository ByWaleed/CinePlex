<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" style="-fx-background-color: white;" stylesheets="@../resources/css/styles.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.baseController">
   <children>
      <VBox prefHeight="600.0" prefWidth="250.0" styleClass="sideMenu">
         <children>
            <ImageView fitHeight="208.0" fitWidth="252.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/images/logo.png" />
               </image></ImageView>
            <Button fx:id="moviesBtn" alignment="CENTER" mnemonicParsing="false" onAction="#navigation" prefHeight="50.0" prefWidth="250.0" styleClass="btn" text="Movies" textFill="WHITE" />
            <Button fx:id="snacksBtn" alignment="CENTER" mnemonicParsing="false" onAction="#navigation" prefHeight="50.0" prefWidth="250.0" styleClass="btn" text="Snacks" textFill="WHITE" />
            <Button fx:id="theatresBtn" alignment="CENTER" mnemonicParsing="false" onAction="#navigation" prefHeight="50.0" prefWidth="250.0" styleClass="btn" text="Theatres" textFill="WHITE" />
            <Button fx:id="cartBtn" alignment="CENTER" mnemonicParsing="false" onAction="#navigation" prefHeight="50.0" prefWidth="250.0" styleClass="btn" text="Cart" textFill="WHITE" />
            <Button fx:id="loginRegisterBtn" alignment="CENTER" mnemonicParsing="false" onAction="#navigation" prefHeight="50.0" prefWidth="250.0" styleClass="btn" text="Login / Register" textFill="WHITE" />
         </children></VBox>
      <Pane fx:id="mainContentPane" layoutX="250.0" prefHeight="600.0" prefWidth="950.0" />
   </children>
</AnchorPane>
